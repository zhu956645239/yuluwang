<view class="container">
  <view class="login-icon">
    <image class="login-img" src="../images/login.jpg"></image>
  </view>
  <view class="login-from">

    <!--账号-->
    <view class="inputView">
      <image class="nameImage" src="../images/name.png"></image>
      <label class="loginLab">姓名</label>
      <input class="inputText" placeholder="请输入真实姓名" bindinput="phoneInput" />
    </view>
    <view class="line"></view>

    <!--密码-->
    <view class="inputView">
      <image class="keyImage" src="../images/key.png"></image>
      <label class="loginLab">身份证号</label>
      <input class="inputText"  placeholder="请输入身份证号" bindinput="passwordInput" />
    </view>

    <!--按钮-->
    <view class="loginBtnView">
      <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">实名认证</button>
    </view>
  </view>
</view>