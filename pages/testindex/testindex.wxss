/**app.wxss**/
.container {
  width: 100%;
  height: 100%;
 
} 
.selection{
  border-bottom: 5px solid #ddd
}
.slide-image{
width:100%;
 height:500rpx;
   
}
.swphoto{
  width:100%;
 height:330rpx;
}
 

.header{
border-left-width: 2px;
border-left-color: limegreen;
border-left-style: solid;
display: flex;
justify-content: space-between;
align-content: center;
height: 60rpx;
padding-left: 10rpx;
padding-right: 10rpx;
margin-top: 10rpx;
margin-bottom: 10rpx
}
.text-all{
 font-family: "华文行楷";
 color: green;
  font-size: 12px;
}
.text-topic{
   font-family: "华文行楷";  font-size: 40rpx; 
}
.contain{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
   justify-content: center
}
.contain-item{
  height: 250rpx;
  width:45%;
 
  margin:10rpx;

  /*这里要用相对布局*/
  position: relative;

}
.contain-item image{
width:100%;
height: 100%;
} 

.contant-item-text{
  /* 文字框绝对布局 */
position: absolute;
bottom: 0px;
color: white;
font-size: 10px;
background: -webkit-linear-gradient(bottom,rgba(0, 0, 0, 0.8),rgba(0, 0, 0, 0));
height:125rpx;
width:98%;
display: flex;
flex-direction: column;
justify-content: flex-end;
padding-left: 1%;
padding-right: 1%;
padding-bottom: 1%
}

 
.list-item{
  height: 500rpx;
  width:100%;
}
.list-item-images{
 height: 400rpx;
width:100%;
position: relative
}
.list-item-images-img{
 height: 100%;
width:100%
}
 
/* 头像 */
.avatar{

  width:100rpx;
  height:100rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -50rpx;
  right:50rpx;
}

 .list-item-text{
   height: 100rpx;
   width:96%;
 
  margin-top: 20rpx;
  padding-left: 2%;
  padding-right: 2%;
 
 }
 .list-item-text-title{
   margin-top: 20rpx;
   font-size: 40rpx;
  font-family: "宋体";
  font-weight: 700
 }
 .list-item-text-content{
  margin-top: 18rpx;
  font-size: 35rpx;
  color: #999 ;
 
 }