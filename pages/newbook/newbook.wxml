<view class='headpic'>
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" vertical="{{vertical}}" circular="{{circular}}">
    <block wx:for="3" wx:for-item="2">
      <swiper-item>
        <image src='{{photo}}' bindload="imageLoad" class='headpic' />
      </swiper-item>
    </block>
  </swiper>
</view>
<view class='title'>书名：{{bookName}}
  <view>￥{{price}}</view>
</view>

